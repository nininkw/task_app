<h3>スケジュール一覧</h3>
 
<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice]%></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>スケジュール更新日</th>
      <th>確認</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>
 
  <tbody>
    <% @agendas.each do |agenda| %>
      <tr>
        <td><%= agenda.id %></td>
        <td><%= agenda.title %></td>
        <td><%= agenda.start_day.to_s(:date_jp) %></td>
        <td><%= agenda.finish_day.to_s(:date_jp) %></td>
        <td>
          <% if agenda.whole_day == true %>
            ○
          <% end %>
        </td>
        <td><%= agenda.updated_at.to_s(:datetime_jp) %></td>
        <td>
            <%= link_to "確認", agenda %>
        </td>
        <td>
            <%= link_to "編集", [:edit, agenda] %>
        </td>
        <td>
            <%= link_to "削除", agenda, method: :delete, data: { confirm: "本当に削除しますか？" } %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
 
 <p><%= link_to "スケジュール新規登録", :new_agenda %></p>



